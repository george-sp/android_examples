<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.codeburrow.camera_basics_example">

    <!-- Declares that the application uses the camera hardware. -->
    <uses-feature android:name="android.hardware.camera" />
    <!-- Declates that the app uses the autofocus feature that the device's camera supports.-->
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <!-- Allows the application to access the camera device. -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Allows the application to write to external storage. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>